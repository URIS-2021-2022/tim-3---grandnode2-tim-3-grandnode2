@inject IWorkContext workContext

@{
    var supportRtl = workContext.WorkingLanguage.Rtl;

    <environment include="Development">
        <link rel="stylesheet" type="text/css" href="/theme/bootstrap-vue/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="/theme/bootstrap-vue/bootstrap-vue.min.css">
        <link rel="stylesheet" type="text/css" href="/theme/css/animate.min.css">
        <link rel="stylesheet" type="text/css" href="/theme/css/pikaday.min.css">
    </environment>
    <environment include="Production">
        <link rel="stylesheet" type="text/css" href="/bundles/site.min.css">
    </environment>

    <link rel="stylesheet" type="text/css" href="/assets/custom/style.css">
    <environment include="Development">
        @if (supportRtl)
        {
            <link rel="stylesheet" type="text/css" asp-src="/theme/css/common/common.rtl.css">
            <link rel="stylesheet" type="text/css" asp-src="/theme/css/header/header.rtl.css">
            <link rel="stylesheet" type="text/css" asp-src="/theme/css/catalog/catalog.rtl.css">
            <link rel="stylesheet" type="text/css" asp-src="/theme/css/product/product.rtl.css">
            <link rel="stylesheet" type="text/css" asp-src="/theme/css/customer/customer.rtl.css">
            <link rel="stylesheet" type="text/css" asp-src="/theme/css/cart/cart.rtl.css">
        }
        else
        {
            <link rel="stylesheet" type="text/css" asp-src="/theme/css/common/common.css">
            <link rel="stylesheet" type="text/css" asp-src="/theme/css/header/header.css">
            <link rel="stylesheet" type="text/css" asp-src="/theme/css/catalog/catalog.css">
            <link rel="stylesheet" type="text/css" asp-src="/theme/css/product/product.css">
            <link rel="stylesheet" type="text/css" asp-src="/theme/css/customer/customer.css">
            <link rel="stylesheet" type="text/css" asp-src="/theme/css/cart/cart.css">

        }
    </environment>
    <environment include="Production">
        @if (supportRtl)
        {
            <link rel="stylesheet" type="text/css" href="/bundles/style.rtl.min.css">
        }
        else
        {
            <link rel="stylesheet" type="text/css" href="/bundles/style.min.css">
        }
    </environment>

    <environment include="Development">
        <script src="/theme/lib/vue.min.js"></script>
        <script src="/theme/lib/portal-vue.umd.min.js"></script>
        <script src="/theme/lib/bootstrap-vue.min.js"></script>
        <script src="/theme/lib/bootstrap-vue-icons-slim.min.js"></script>
        <script src="/theme/lib/axios.min.js"></script>
        <script src="/theme/lib/vue-awesome-countdown.umd.min.js"></script>
        <script src="/theme/lib/vee-validate.minimal.min.js"></script>
        <script src="/theme/lib/pikaday.min.js"></script>

        <script src="/theme/script/validation-config.min.js"></script>
        <script src="/theme/script/public.common.js"></script>
        <script src="/theme/script/public.axios.js"></script>
        <script src="/theme/script/public.reservation.js"></script>
    </environment>
    <environment include="Production">
        <script src="/bundles/site.min.js"></script>
    </environment>


    <script asp-location="Footer" asp-src="/theme/script/menu.js"></script>
    <script asp-location="Footer" asp-src="/theme/lib/popper.min.js"></script>
    <script asp-location="Footer" asp-src="/theme/script/app.js"></script>

    <script asp-location="Footer" asp-src="/assets/custom/script.js"></script>
}
